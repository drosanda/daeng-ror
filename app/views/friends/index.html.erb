<table class="table table-striped">
  <thead class="thead dark">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Money</th>
      <th>Bdate</th>
      <th>Reg date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.age %></td>
        <td><%= friend.money %></td>
        <td><%= friend.bdate %></td>
        <td><%= friend.reg_date %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class: "btn btn-primary" %>
